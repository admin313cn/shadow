<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="theme">
        <attr name="appbg" format="reference"/>
        <attr name="press_color" format="reference"/>
        <attr name="play_bar_color" format="reference"/>
        <attr name="accent_color" format="reference"/>
        <attr name="divider" format="reference"/>
        <attr name="image_tint" format="reference"/>
        <attr name="my_selector_layout" format="reference"/>
        <attr name="text_color" format="color"/>
    </declare-styleable>
    <declare-styleable name="SpringView">
        <attr name="type">
            <enum name="overlap" value="0"/>
            <enum name="follow" value="1"/>
            <enum name="drag" value="2"/>
        </attr>
        <attr name="give">
            <enum name="both" value="0"/>
            <enum name="top" value="1"/>
            <enum name="bottom" value="2"/>
            <enum name="none" value="3"/>
        </attr>
        <attr name="header" format="reference"/>
        <attr name="footer" format="reference"/>
    </declare-styleable>
</resources>